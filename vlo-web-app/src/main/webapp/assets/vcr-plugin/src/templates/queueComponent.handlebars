{{! 
    HTML template for the queue component. See <https://handlebarsjs.com> 
}}

<div class="vcr-plugin">
    <div id="queue-component">
        <h2>Items to submit to the VCR</h2>
        <form method="post" action="{{submitEndpoint}}">
            <input type="hidden" name="name" value="{{name}}" />
            <ul id="queue-items"">
            {{#each items}}
                    <li data-vcr-url="{{url}}">
                    {{title}}
                    <a class="removeFromVcrQueue" style="color: red; text-decoration: none;" href="#">X</a>
                    {{! Input value is produced with custom helper defined in src/templates/helpers }}
                    <input 
                        type="hidden" 
                        name="resourceUri" 
                        value="{{resource_uri this}}" 
                    />
                    </li>
            {{/each}}
            </ul>
            <input id="submitVcrQueue" type="submit" value="Submit" />
            <button id="clearVcrQueue">Clear</button>
        </form>
    </div>
    </div>