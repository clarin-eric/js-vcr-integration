{{! 
    HTML template for the queue component. See <https://handlebarsjs.com> 
}}

<div class="vcr-plugin">
    <div id="queue-component" class="well {{position}} {{customClass}}">
        <div class="component-control">
            <a class="component-control-hide-toggle do-hide" href="#">{{{icons.hide}}} Hide</a>
            <a class="component-control-hide-toggle do-show" href="#">{{{icons.show}}} Show VCR queue ({{items.length}} items)</a>
        </div>
        <div class="content">
            <div class="queue-control-message-content-container alert alert-danger hidden" role="alert">
                <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="queue-control-message-content"></span>
            </div>
            <h2>Items to submit to the VCR</h2>
            <form method="post" action="{{submitEndpoint}}">
                <input type="hidden" name="name" value="{{name}}" />
                <ul id="queue-items"">
                {{#each items}}
                        <li data-vcr-url="{{url}}">
                        {{title}}
                        <a class="removeFromVcrQueue" style="color: red; text-decoration: none;" href="#">X</a>
                        {{! Input value is produced with custom helper defined in src/templates/helpers }}
                        <input 
                            type="hidden" 
                            name="resourceUri" 
                            value="{{resource_uri this}}" 
                        />
                        </li>
                {{/each}}
                </ul>
                <input class="btn btn-primary" id="submitVcrQueue" type="submit" value="Submit" />
                <button class="btn btn-default" id="clearVcrQueue">Clear</button>
            </form>
        </div>
        <div class="minimized-content"></div>
    </div>
</div>
